model Monetory_posts {
  id        Int   @id @default(autoincrement())
  awarded_by  String
  awardee    String
  award_type  String  @default(monetory)
  award_name  String
  points      Int
  post_time   DateTime  @default(now())
  desc1       String
  desc2       String
  desc3       String
  desc4       String
  @@client(appdb)
  }

model Non_Monetory_posts {
  id        Int   @id @default(autoincrement())
  awarded_by  String
  awardee    String
  award_type  String  @default(monetory)
  award_name  String
  points      Int
  post_time   DateTime  @default(now())
  desc1       String
  @@client(appdb)
}

model Main_posts {
  id        Int   @id @default(autoincrement())
  awarded_by  String  
  awardee    String
  award_type  String
  award_name  String
  points      Int
  post_time   DateTime
  desc1       String
  desc2       String
  desc3       String
  desc4       String
  monetory    Boolean @default(false)
  @@client(appdb)
}

model Post {
  id        Int    @id @default(autoincrement())
  title     String
  content   String
  authorId  Int
  author    User   @relation(fields: [authorId], references: [id])
  @@client(appdb)
}










