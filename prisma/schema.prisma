generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

datasource appdb {
  provider = "postgresql"
  url      = env("APPDB_URL")
}


model User {
  id    Int    @id @default(autoincrement())
  name  String?
  email String? @unique
  role   String
  Level   String
  password String?
  accounts Account[]
  sessions Session[]
  @@client(db)
}

model Account {
  id                Int      @id @default(autoincrement())
  userId            Int
  providerType      String
  providerId        String
  providerAccountId String
  user              User     @relation(fields: [userId], references: [id])
  @@client(db)
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId      Int
  expires     DateTime
  user        User     @relation(fields: [userId], references: [id])
  @@client(db)
}

model Posts {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  @@client(appdb)
}

model Monetory_posts {
  id        Int   @id @default(autoincrement())
  awarded_by  String
  awardee    String
  award_type  String  @default(monetory)
  award_name  String
  points      Int
  post_time   DateTime  @default(now())
  desc1       String
  desc2       String
  desc3       String
  desc4       String
  @@client(appdb)
  }

model Non_Monetory_posts {
  id        Int   @id @default(autoincrement())
  awarded_by  String
  awardee    String
  award_type  String  @default(monetory)
  award_name  String
  points      Int
  post_time   DateTime  @default(now())
  desc1       String
  @@client(appdb)
}

model Main_posts {
  id        Int   @id @default(autoincrement())
  awarded_by  String  
  awardee    String
  award_type  String
  award_name  String
  points      Int
  post_time   DateTime
  desc1       String
  desc2       String
  desc3       String
  desc4       String
  monetory    Boolean @default(false)
  @@client(appdb)
}

model Post {
  id        Int    @id @default(autoincrement())
  title     String
  content   String
  authorId  Int
  author    User   @relation(fields: [authorId], references: [id])
  @@client(appdb)
}